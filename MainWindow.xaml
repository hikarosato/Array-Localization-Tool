<Window x:Class="Array_Translate_Tool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Array Translate Tool 2 © Галицький Розбишака"
        Height="600" Width="1040" MinHeight="600" MinWidth="1040"
        Closing="Window_Closing"
        KeyDown="Window_KeyDown"
        WindowStartupLocation="CenterScreen">

    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="5">
            <Button x:Name="BtnOpen" Content="Відкрити" Width="80" Margin="2" Click="BtnOpen_Click"/>
            <Button x:Name="BtnSave" Content="Зберегти" Width="80" Margin="2" Click="BtnSave_Click"/>
            <Button x:Name="BtnLoadTranslation" Content="Підтягнути переклад" Width="130" Margin="2" Click="BtnLoadTranslation_Click"/>
            <Button x:Name="BtnExportCsv" Content="Експорт у CSV" Width="100" Margin="2" Click="BtnExportCsv_Click"/>
            <Button x:Name="BtnImportCsv" Content="Імпорт з CSV" Width="100" Margin="2" Click="BtnImportCsv_Click"/>
            <TextBox x:Name="TxtSearch" Width="250" Margin="2" KeyDown="TxtSearch_KeyDown"/>
            <CheckBox x:Name="ChkCase" Content="З урах. регістру" Margin="6"/>
            <Button x:Name="BtnPrev" Content="←" Width="25" Margin="2" Click="BtnPrev_Click" IsEnabled="False"/>
            <Button x:Name="BtnNext" Content="→" Width="25" Margin="2" Click="BtnNext_Click" IsEnabled="False"/>
            <Label x:Name="LblSearchStatus" Content="" Margin="5,0,0,0"/>
        </StackPanel>

        <Grid Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>

            <DataGrid x:Name="DataGridTerms" AutoGenerateColumns="False" Grid.Row="0"
                      SelectionMode="Single" SelectionUnit="FullRow"
                      IsReadOnly="False"
                      SelectionChanged="DataGridTerms_SelectionChanged"
                      CellEditEnding="DataGridTerms_CellEditEnding" CanUserAddRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="№" Width="45" IsReadOnly="True" Binding="{Binding Number}" CanUserSort="False"/>
                    <DataGridTextColumn Header="ID" Width="200" IsReadOnly="True" Binding="{Binding Term}" CanUserSort="False"/>
                    <DataGridTextColumn Header="Оригінал" Width="250" IsReadOnly="True" Binding="{Binding Original}" CanUserSort="False"/>
                    <DataGridTextColumn Header="Переклад" Width="*" IsReadOnly="True" Binding="{Binding Translation, UpdateSourceTrigger=PropertyChanged}" CanUserSort="False"/>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="1" Margin="0,5">
                <Button x:Name="BtnRestoreOriginal" Content="Повернути оригінал" Margin="2" Click="BtnRestoreOriginal_Click"/>
                <Button x:Name="BtnRestoreAll" Content="Повернути оригінал в усі рядки" Margin="2" Click="BtnRestoreAll_Click"/>
            </StackPanel>

            <TextBox x:Name="TxtTranslation" Grid.Row="2" AcceptsReturn="True" FontSize="14"
                     VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"
                     BorderBrush="DodgerBlue" BorderThickness="2" FontWeight="Bold"
                     TextChanged="TxtTranslation_TextChanged"/>
        </Grid>
    </DockPanel>
</Window>
